<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.etienne.englishtoeic_application.QuestionActivity">

    <TextView
        android:text="question question question question question question question question question question question question question question question question question question question question question question question question question question question question "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/textView4" />

    <RelativeLayout
        android:layout_row="1"
        android:layout_column="0" >
        <Button
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:text="a"/>
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="54dp"
            android:gravity="fill"
            android:id="@+id/textView5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_row="2"
        android:layout_column="0" >
        <Button
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:text="b"/>
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="54dp"
            android:gravity="fill"
            android:id="@+id/textView6" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_row="3"
        android:layout_column="0">
        <Button
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:text="c"/>
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="54dp"
            android:gravity="fill"
            android:id="@+id/textView7" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_row="4"
        android:layout_column="0" >
        <Button
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:text="d"/>
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="54dp"
            android:gravity="fill"
            android:id="@+id/textView8" />
    </RelativeLayout>

    <LinearLayout
        android:layout_row="5"
        android:layout_column="0"
        android:orientation="horizontal"
        android:layout_width="fill_parent">
        <Button
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:text="quit"/>
        <TextView
            android:text="TextView"
            android:layout_width="425dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:id="@+id/textView9" />
        <Button
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:clickable="false"
            android:text="next"/>
    </LinearLayout>


</GridLayout>
