<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/textTheme"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="EXAM"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textViewTagName"
        android:layout_toEndOf="@+id/textViewTagName"
        android:id="@+id/ButtonExam"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="VOCA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ButtonExam"
        android:layout_toEndOf="@+id/ButtonExam"
        android:id="@+id/ButtonVoca"/>


</RelativeLayout>